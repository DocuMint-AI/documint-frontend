# DocuMint AI Environment Configuration

# Backend API Configuration
NEXT_PUBLIC_BACKEND_PROTOCOL=http
NEXT_PUBLIC_BACKEND_HOST=localhost
NEXT_PUBLIC_BACKEND_PORT=8000
NEXT_PUBLIC_BACKEND_BASE_URL=http://localhost:8000

# Authentication Endpoints
NEXT_PUBLIC_AUTH_REGISTER_ENDPOINT=/register
NEXT_PUBLIC_AUTH_LOGIN_ENDPOINT=/login
NEXT_PUBLIC_AUTH_LOGOUT_ENDPOINT=/logout
NEXT_PUBLIC_AUTH_ME_ENDPOINT=/me
NEXT_PUBLIC_AUTH_UPDATE_PASSWORD_ENDPOINT=/update-password

# Document Processing Endpoints
NEXT_PUBLIC_BACKEND_UPLOAD_ENDPOINT=/api/v1/upload
NEXT_PUBLIC_BACKEND_PROCESS_ENDPOINT=/api/v1/process-document
NEXT_PUBLIC_BACKEND_QA_ENDPOINT=/api/v1/qa
NEXT_PUBLIC_BACKEND_DOCUMENTS_ENDPOINT=/api/v1/documents

# Health Check
NEXT_PUBLIC_BACKEND_HEALTH_ENDPOINT=/health

# Frontend Configuration
NEXT_PUBLIC_FRONTEND_PORT=3000

# App Configuration
NEXT_PUBLIC_APP_NAME="DocuMint AI"
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_SUPPORTED_FORMATS=.pdf,.doc,.docx

# API Mode Configuration
# Set to 'true' to force mock mode, 'false' or unset to use real backend
NEXT_PUBLIC_FORCE_MOCK_MODE=false

# Development
NODE_ENV=development